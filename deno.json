{
  "name": "radi",
  "version": "0.5.0",
  "tasks": {
    "dev": "deno -A npm:esbuild playground/*.tsx --jsx-import-source=preact --jsx=automatic --watch --servedir=playground/www --outdir=playground/www --bundle",
    "test": "deno -A --unstable-bundle @marcisbee/rion/test --includes src",
    "bench": "deno -A --unstable-bundle @marcisbee/rion/bench --includes src",
    "publish": "deno -A ./build.npm.ts && cd npm && npm publish --tag alpha"
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "imports": {
    "@marcisbee/rion": "jsr:@marcisbee/rion@^0.3.0"
  }
}
