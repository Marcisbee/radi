{
  "name": "radi",
  "version": "0.5.0-beta.26",
  "main": "dist/radi.js",
  "module": "dist/radi.js",
  "jsnext:main": "dist/radi.es.js",
  "license": "MIT",
  "repository": "radi-js/radi",
  "author": "Marcis Bergmanis <marcisbergmanis@gmail.com>",
  "keywords": [
    "radi",
    "radijs",
    "radi.js",
    "dom"
  ],
  "scripts": {
    "dev": "rollup -c -n Radi -f umd -i src/index.js -o dist/radi.js -m --watch",
    "prod": "npm run build",
    "build": "npm run roll && npm run min",
    "roll": "npm run roll-es && npm run roll-js",
    "roll-es": "rollup -c -n Radi -f es -i src/index.js -o dist/radi.es.js -m",
    "roll-js": "rollup -c -n Radi -f umd -i src/index.js -o dist/radi.js -m",
    "min": "npm run min-es && npm run min-js",
    "min-roll": "rollup --config rollup.config.min.js -n Radi -f umd -i src/index.js -o dist/radi.min.js -m",
    "min-js": "google-closure-compiler-js dist/radi.js > dist/radi.min.js",
    "min-es": "squash dist/radi.es.js -o dist/radi.es.min.js",
    "lint": "eslint ./src/**/*.js",
    "test:watch": "jest --watch",
    "test": "jest",
    "test:ci": "npm run test -- --ci",
    "ci": "npm run test:ci  && npm run build",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "butternut": "^0.4.6",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "google-closure-compiler-js": "^20180204.0.0",
    "jest": "^23.6.0",
    "pretty-quick": "^1.8.0",
    "rollup": "^0.67.4",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-node-resolve": "^3.4.0",
    "sinon": "^7.1.1",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2"
  },
  "babel": {},
  "prettier": {
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "singleQuote": true,
    "semi": true
  }
}
