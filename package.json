{
  "name": "radi",
  "version": "0.2.7",
  "main": "dist/radi.js",
  "module": "dist/radi.es.js",
  "jsnext:main": "dist/radi.es.js",
  "license": "MIT",
  "repository": "radi-js/radi",
  "author": "Marcis Bergmanis <marcisbergmanis@gmail.com>",
  "keywords": [
    "radi",
    "radijs",
    "radi.js",
    "dom"
  ],
  "scripts": {
    "dev": "webpack --config ./.webpack/dev.js",
    "prod": "npm run build",
    "build": "npm run roll && npm run min",
    "roll": "npm run roll-es && npm run roll-js",
    "roll-es": "rollup -c -n radi -f es -i src/index.js -o dist/radi.es.js -m",
    "roll-js": "rollup -c -n radi -f umd -i src/index.js -o dist/radi.js -m",
    "min": "npm run min-es && npm run min-js",
    "min-js": "google-closure-compiler-js dist/radi.js > dist/radi.min.js",
    "min-es": "squash dist/radi.es.js -o dist/radi.es.min.js",
    "lint": "eslint ./src/**/*.js --fix",
    "test": "jest --watch",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "butternut": "^0.4.6",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "google-closure-compiler-js": "^20180204.0.0",
    "jest": "^22.4.2",
    "jsdom": "^11.5.1",
    "pretty-quick": "^1.4.1",
    "rollup": "^0.57.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sinon": "^4.4.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.10"
  },
  "babel": {},
  "prettier": {
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "singleQuote": true,
    "semi": true
  }
}
